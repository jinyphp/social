{
    "table": {
        "name": "user_oauth_providers",
        "model": "Jiny\\Auth\\Models\\UserOAuthProvider",
        "where": {},
        "sort": {
            "column": "name",
            "order": "asc"
        },
        "relations": {
            "oauth_accounts": {
                "method": "withCount",
                "name": "oauthAccounts"
            }
        }
    },
    "index": {
        "title": "OAuth 프로바이더 관리",
        "subtitle": "소셜 로그인 프로바이더 목록",
        "view": "jiny-social::admin.oauth-providers.index",
        "route": "admin.auth.oauth.providers.index",
        "filter": {
            "search": false,
            "status": false
        },
        "pagination": {
            "per_page": 15
        }
    },
    "show": {
        "title": "OAuth 프로바이더 상세",
        "subtitle": "OAuth 프로바이더 정보 조회",
        "view": "jiny-social::admin.oauth-providers.show",
        "route": "admin.auth.oauth.providers.show"
    },
    "create": {
        "title": "OAuth 프로바이더 추가",
        "subtitle": "새로운 소셜 로그인 프로바이더 추가",
        "view": "jiny-social::admin.oauth-providers.create",
        "route": "admin.auth.oauth.providers.create"
    },
    "edit": {
        "title": "OAuth 프로바이더 수정",
        "subtitle": "OAuth 프로바이더 정보 수정",
        "view": "jiny-social::admin.oauth-providers.edit",
        "route": "admin.auth.oauth.providers.edit"
    },
    "store": {
        "route": "admin.auth.oauth.providers.store",
        "redirect": {
            "success": "admin.auth.oauth.providers.index",
            "error": "admin.auth.oauth.providers.create"
        },
        "validation": {
            "name": "required|string|max:255",
            "provider": "required|string|unique:user_oauth_providers,provider",
            "client_id": "required|string",
            "client_secret": "required|string",
            "callback_url": "nullable|url",
            "enable": "nullable|string|in:yes,no"
        },
        "defaults": {
            "enable": "no"
        },
        "messages": {
            "success": "소셜 로그인 프로바이더가 추가되었습니다.",
            "error": "소셜 로그인 프로바이더 추가에 실패했습니다."
        }
    },
    "update": {
        "route": "admin.auth.oauth.providers.update",
        "redirect": {
            "success": "admin.auth.oauth.providers.show",
            "error": "admin.auth.oauth.providers.edit"
        },
        "validation": {
            "name": "required|string|max:255",
            "provider": "required|string",
            "client_id": "required|string",
            "client_secret": "required|string",
            "callback_url": "nullable|url",
            "enable": "nullable|string|in:yes,no"
        },
        "messages": {
            "success": "소셜 로그인 프로바이더가 업데이트되었습니다.",
            "error": "소셜 로그인 프로바이더 업데이트에 실패했습니다."
        }
    },
    "delete": {
        "title": "OAuth 프로바이더 삭제",
        "subtitle": "OAuth 프로바이더 삭제 확인",
        "route": "admin.auth.oauth.providers.destroy",
        "redirect": {
            "success": "admin.auth.oauth.providers.index"
        },
        "messages": {
            "success": "소셜 로그인 프로바이더가 삭제되었습니다.",
            "error": "소셜 로그인 프로바이더 삭제에 실패했습니다."
        }
    }
}

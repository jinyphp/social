{
    "table": {
        "name": "user_socials",
        "sort": {
            "column": "created_at",
            "order": "desc"
        }
    },
    "storage": {},
    "index": {
        "title": "소셜 계정 관리",
        "subtitle": "사용자 소셜 로그인 계정 목록",
        "view": "jiny-social::admin.user-social.index",
        "route": "admin.auth.user.social.index",
        "filter": {
            "search": true,
            "provider": true
        },
        "pagination": {
            "per_page": 20
        }
    },
    "show": {
        "title": "소셜 계정 상세",
        "subtitle": "소셜 계정 정보",
        "view": "jiny-social::admin.user-social.show",
        "route": "admin.auth.user.social.show"
    },
    "create": {
        "title": "소셜 계정 생성",
        "subtitle": "새로운 소셜 계정 추가",
        "view": "jiny-social::admin.user-social.create",
        "route": "admin.auth.user.social.create"
    },
    "edit": {
        "title": "소셜 계정 수정",
        "subtitle": "소셜 계정 정보 수정",
        "view": "jiny-social::admin.user-social.edit",
        "route": "admin.auth.user.social.edit"
    },
    "store": {
        "route": "admin.auth.user.social.store",
        "redirect": {
            "success": "admin.auth.user.social.index",
            "error": "admin.auth.user.social.create"
        },
        "validation": {
            "user_id": "required|exists:users,id",
            "provider": "required|string|max:50",
            "provider_id": "required|string|max:255",
            "email": "nullable|email|max:255",
            "name": "nullable|string|max:255"
        },
        "messages": {
            "success": "소셜 계정이 성공적으로 생성되었습니다.",
            "error": "소셜 계정 생성에 실패했습니다."
        }
    },
    "update": {
        "route": "admin.auth.user.social.update",
        "redirect": {
            "success": "admin.auth.user.social.show",
            "error": "admin.auth.user.social.edit"
        },
        "validation": {
            "provider": "required|string|max:50",
            "provider_id": "required|string|max:255",
            "email": "nullable|email|max:255",
            "name": "nullable|string|max:255"
        },
        "messages": {
            "success": "소셜 계정 정보가 성공적으로 업데이트되었습니다.",
            "error": "소셜 계정 정보 업데이트에 실패했습니다."
        }
    },
    "delete": {
        "title": "소셜 계정 삭제",
        "subtitle": "소셜 계정 삭제 확인",
        "route": "admin.auth.user.social.destroy",
        "redirect": {
            "success": "admin.auth.user.social.index"
        },
        "messages": {
            "success": "소셜 계정이 성공적으로 삭제되었습니다.",
            "error": "소셜 계정 삭제에 실패했습니다."
        }
    }
}
